<% include partials/sidenav %>
  <div class="main-wrapper">
    <!-- User Input Section -->
    <div class=" user-input col-lg-7 col-md-9 col-sm-10">
        <form class="notice-entry" action="admin/notices" method="post">
  
          <i class="fas fa-2x fa-share-alt">&nbsp</i>
          <h3 class="d-inline"> Publish Notice</h3>
          <br><br>
          <input class="input-area title-input" type="text" placeholder="Enter title of notice here." name="title" value="" required> <br>
          <textarea class="input-area desc-input" type="text" placeholder="Enter notice description here." name="descrip" value=""></textarea> <br>
  

          <!-- Post Submit Button -->
          <button class="btn btn-dark btn-sm submit-button" type="submit" name="button"> Submit </button>
          <br>&nbsp
  
        </form>
  
        <hr>
      </div>


    <div class="containerr">
      <br>
      <span class="section-header d-block col-lg-7 col-md-9 col-sm-10 ">
        <i class="fas fa-2x fa-user-plus">&nbsp</i>
        <h3 class="d-inline"> New Users</h3>
      </span>


      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="thead-dark">
              <% if(found.length == 0) { %>
                <p>No new users</p>
            <% } else { %>
              <tr>
                  <th scope="col">#</th>
                  <th scope="col">Username</th>
                  <th scope="col">Email</th>
                  <th scope="col">Action ? </th>
                </tr>
              </thead>
              <tbody>
                <% found.forEach(function(user) { %>
                  <tr>
                  <th scope="row">1</th>
                  <td><%= user.username %></td>
                  <td><%= user.email %></td>
                  <td>
                    <a class="btn no-padding-btn" href="/admin/<%= user.id %>"><i class="fas fa-user-check"></i> Accept</a>&nbsp
                    <a class="btn no-padding-btn" id="delete-btn" data-id="<%= user._id %>"> <i class="fas fa-trash-alt"></i> Delete</a>
                  </td>
                </tr>
                <% }); %>
           <% } %> 
          </tbody>
        </table>
        <br>
        <hr>


      </div>



  
      <div class="row">
          <br>
          <span class="section-header d-block col-lg-7 col-md-9 col-sm-10 ">
    
            <i class="fas fa-2x fa-flag">&nbsp</i>
            <h3 class="d-inline"> Reported Posts</h3>
          </span>
          <br><br>
            
          <div class="userposts col-lg-7 col-md-9 col-sm-10">
            <% if(data.length == 0) { %>
              <p>No reported posts</p>
          <% } else { %>
            <% data.forEach(function(post) { %>
            <div class="title-desc">
              <h4><%= post.title %></h4>
              <h6></h6>
            </div>
            <div class="">
              <a class="btn no-padding-btn" href="#"> <i class="fas fa-check-circle"></i> Accept</a>&nbsp
              <a class="btn no-padding-btn" id="delReport-post" data-id="<%= post.id  %>"><i class="fas fa-trash-alt"></i> Delete</a>
              <span class="time-section">
                <i>4 days ago </i> |
                <a href="#"><%= post.author.username %></a>
              </span>
            </div>
            <% }); %>
            <% } %>
    
        </div>
    </div>

    </div>
  </div>
  <footer class="footer">
    <p class="footer-text">@DiscussionForum , College Project, 2019</p>
  </footer>