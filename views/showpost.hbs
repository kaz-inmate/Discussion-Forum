 {{>sidenav}}
<!-- Posts Section -->

  <div class="main row">
    <section class="post-comment col-lg-8 col-md-11">
      <div class="post">
        <div class="row">
          <div class="col-lg-12">
            <div class="row">
              <h4>Title of the post goes here.</h4>
            </div>
            <div class="row">
              <h6>{{post.textarea}}</h6>
            </div>
            <div class="">
              <span class="vote-section">
                <i class="fas fa-chevron-up"></i>
                <a href="#">111</a>
                <i class="fas fa-chevron-down"></i> &nbsp
                <a href="#"><i class="fas fa-reply"></i> Reply</a>
              </span>
              <span class="time-section">
                <i>4 hours ago </i>|
                <a href="#">{{post.username}}</a>
              </span>

            </div>
          </div>
        </div>
      </div>

      <!-- Comment Section -->

      <!-- User Reply -->
      <div class="comment-box">
        <form class="" action="/posts/{{post._id}}/comments" method="post">
          <textarea class="input-area comment-area"  name = "comment" type="text" placeholder="Enter your comment here..." name="" value=""></textarea> <br>
          <button class="btn btn-dark submit-button btn-sm" type="submit" name="button"> Comment </button>
        </form>
      </div>


      <!-- Comments Display -->
{{#each post.comments}}
      <div class="row">
        <div class="userposts col-lg-12 col-md-12 col-sm-12">
            <div class="uservote">
              <i class="fas fa-chevron-up comment-up"></i><br>
              <a href="#">111</a><br>
              <i class="fas fa-chevron-down comment-down"></i>
            </div>

            <div class="title-desc">
              <h6>{{this.comment}}</h6>
            </div>
            <div class="">
              <span class="time-section">
                <i>{{this.created_date}} </i>
                <a href="#">{{this.author.username}}</a>
              </span> 
              </div>
            </div>

        </div>
        {{/each}}
    </section>

   
  </div>